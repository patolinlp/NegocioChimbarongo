<div class="page-header position-relative">
    <h1>
        Clientes
        <small>
            <i class="fa fa-angle-double-right"></i>
            Lista de todos los clientes
        </small>
    </h1>
</div><!--/.page-header-->

<% if current_usuario.tipo_usuario != 0 %>
<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <h3 class="header smaller lighter green">Filtros de Cliente por rut</h3>
    </div>
    <!--PAGE CONTENT BEGINS-->
    <%= form_for_filterrific @filterrific,:html => {:class => "new_filterrific form-inline"}  do |f| %>
      <%# campo de busqueda%>
      <div class="row-fluid">
        <div class="span3">
          <div class="row-fluid">
            <label>Seleccionar rut :</label>
          </div>
          <div class="control-group">
            <div class="row-fluid input-append">
              <%= f.text_field(:with_rut, :class => 'filterrific-periodically-observed span10') %>
              <span class="add-on">
                <i class="fa fa-credit-card"></i>
              </span>
            </div>
          </div>
        </div>

      </div>
      <%= render_filterrific_spinner %>
    <% end %>

    <div class="row-fluid">
      <h3 class="header smaller lighter green">Lista de Clientes</h3>
    </div>
    <!--PAGE CONTENT BEGINS-->
    <div class="pull-right">
      <%= link_to new_cliente_path, :class => "btn btn-primary" do %>
        <i class="fa fa-plus"></i>
        Nuevo Cliente
      <% end %>
    </div>
    <br>
    <div class="row-fluid">
      <div class="span12">
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Rut</th>
              <th>Nombre aval</th>
              <th>Apellido aval</th>
              <th>Rut aval</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @clientes.each do |cliente| %>
              <tr>
                <td><%= cliente.nombre %></td>
                <td><%= cliente.apellido %></td>
                <td><%= cliente.direccion %></td>
                <td><%= cliente.telefono %></td>
                <td><%= cliente.rut %></td>
                <td><%= cliente.nombre_aval %></td>
                <td><%= cliente.apellido_aval %></td>
                <td><%= cliente.rut_aval %></td>
                <td>
                  <%= link_to cliente, :class => "btn btn-mini btn-success", :rel => "tooltip", :title => "Ver detalles" do%>
                    <i class="fa fa-search bigger-120"></i>
                  <% end %>

                  <%= link_to edit_cliente_path(cliente), :class => "btn btn-mini btn-info", :rel => "tooltip", :title => "Editar" do%>
                    <i class="fa fa-edit bigger-120"></i>
                  <% end %>

                  <%= link_to cliente, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar el producto?'}, :class => "btn btn-mini btn-danger", :rel => "tooltip", :title => "Eliminar" do %>
                    <i class="fa fa-trash bigger-120"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>