<div class="page-header position-relative">
    <h1>
        Pagos
        <small>
            <i class="fa fa-angle-double-right"></i>
            Lista de todos los pagos
        </small>
    </h1>
</div><!--/.page-header-->

<% if current_usuario.tipo_usuario != 0 %>
<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span12">
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
        	<thead>
		        <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Direccion</th>
              <th>Telefono</th>
              <th>Rut</th>
              <th>Nombre aval</th>
              <th>Apellido aval</th>
              <th>Rut aval</th>
              <th></th>
	          </tr>
	        </thead>

	        <tbody>
            <% @clientes.each do |cliente| %>
              <tr>
                <td><%= cliente.nombre %></td>
                <td><%= cliente.apellido %></td>
                <td><%= cliente.direccion %></td>
                <td><%= cliente.telefono %></td>
                <td><%= cliente.rut %></td>
                <td><%= cliente.nombre_aval %></td>
                <td><%= cliente.apellido_aval %></td>
                <td><%= cliente.rut_aval %></td>
	              <td>
	                <%= link_to pagos_cliente_path(cliente), :class => "btn btn-primary" do %>
                    <i class="fa fa-check"></i>
	                	Seleccionar
	                <% end %>
		            </td>
		          </tr>
		        <% end %>  
			    </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>