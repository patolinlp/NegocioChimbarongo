<div class="page-header position-relative">
    <h1>
        Tipo de Productos
        <small>
            <i class="fa fa-angle-double-right"></i>
            Lista de todos los tipos de productos
        </small>
    </h1>
</div><!--/.page-header-->

<% if current_usuario.tipo_usuario == 1 %>
<div class="row-fluid">
  <div class="span12">
    <!--PAGE CONTENT BEGINS-->
    <div class="pull-right">
      <%= link_to new_tipo_producto_path, :class => "btn btn-primary" do %>
        <i class="fa fa-plus"></i>
        Nuevo Tipo de Producto
      <% end %>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @tipo_productos.each do |tipo_producto| %>
              <tr>
                <td><%= tipo_producto.nombre %></td>
                <td>
                  <%= link_to tipo_producto, :class => "btn btn-mini btn-success", :rel => "tooltip", :title => "Ver detalles" do%>
                    <i class="fa fa-search bigger-120"></i>
                  <% end %>

                  <%= link_to edit_tipo_producto_path(tipo_producto), :class => "btn btn-mini btn-info", :rel => "tooltip", :title => "Editar" do%>
                    <i class="fa fa-edit bigger-120"></i>
                  <% end %>

                  <%= link_to tipo_producto, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar el tipo de producto?'}, :class => "btn btn-mini btn-danger", :rel => "tooltip", :title => "Eliminar" do %>
                    <i class="fa fa-trash bigger-120"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
