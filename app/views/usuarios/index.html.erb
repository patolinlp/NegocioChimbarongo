<div class="page-header position-relative">
    <h1>
        Usuarios
        <small>
            <i class="fa fa-angle-double-right"></i>
            Lista de todos usuarios
        </small>
    </h1>
</div><!--/.page-header-->

<% if current_usuario.tipo_usuario == 1 %>
<div class="row-fluid">
  <div class="span12">
    <!--PAGE CONTENT BEGINS-->
    <div class="row-fluid">
      <div class="span12">
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Email</th>
              <th>Tipo de Usuario</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.nombre %></td>
                <td><%= usuario.apellido %></td>
                <td><%= usuario.email %></td>
                <td>
                  <% if usuario.tipo_usuario == 0 %>
                    <span class="label label-important arrowed-in-right arrowed">No Terminado</span>
                  <% elsif usuario.tipo_usuario == 1 %>
                    <span class="label label-success arrowed-in-right arrowed">Administrador</span>
                  <% else %>
                    <span class="label label-warning arrowed-in-right arrowed">Vendedor</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to usuario, :class => "btn btn-mini btn-success", :rel => "tooltip", :title => "Ver detalles" do%>
                    <i class="fa fa-search bigger-120"></i>
                  <% end %>

                  <%= link_to edit_usuario_path(usuario), :class => "btn btn-mini btn-info", :rel => "tooltip", :title => "Editar" do%>
                    <i class="fa fa-edit bigger-120"></i>
                  <% end %>

                  <%= link_to usuario, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar el tipo de producto?'}, :class => "btn btn-mini btn-danger", :rel => "tooltip", :title => "Eliminar" do %>
                    <i class="fa fa-trash bigger-120"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>