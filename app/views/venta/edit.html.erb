<div class="page-header position-relative">
    <h1>
        Venta
        <small>
            <i class="fa fa-angle-double-right"></i>
            Editar una venta
        </small>
    </h1>
</div><!--/.page-header-->

<% if current_usuario.tipo_usuario != 0 %>
<div class="row-fluid">
  <div class="span12">
    <%= form_for(@ventum, :class => "form-horizontal") do |f| %>
      <% if @ventum.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ventum.errors.count, "error") %> prohibited this ventum from being saved:</h2>

          <ul>
          <% @ventum.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :usuario_id, :class => "control-label", :for => "form-field-1" %>
        <div class="controls">
          <%= f.number_field :usuario_id, :id => "form-field-1", :placeholder => "Usuario" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :total, :class => "control-label", :for => "form-field-1" %>
        <div class="controls">
          <%= f.number_field :total, :id => "form-field-1", :placeholder => "Usuario" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Aceptar", :class => "btn btn-success"%>
      </div>
      
    <% end %>
  </div>
</div>

<div class = "form-inline pull-right">
  <%= link_to @ventum, :class => "btn btn-success" do %>
    <i class="fa fa-search"></i>
    Ver
  <% end %>
  
  <%= link_to venta_path, :class => "btn btn-warning" do %>
    <i class="fa fa-reply"></i>
    Volver
  <% end %>
</div>
<% end %>