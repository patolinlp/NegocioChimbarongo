<div class="page-header position-relative">
    <h1>
        Venta
        <small>
            <i class="fa fa-angle-double-right"></i>
            Detalle de la Venta
        </small>
    </h1>
</div><!--/.page-header-->

<% if current_usuario.tipo_usuario != 0 %>
<div class="row-fluid">
  <div class="span9">
    <div class="profile-info-row">
      <div class="profile-info-name"> Vendedor </div>

      <div class="profile-info-value">
        <span><%= Usuario.find(@ventum.usuario_id).nombre %></span>
      </div>
    </div>

    <div class="profile-info-row">
      <div class="profile-info-name"> Lista de Productos </div>

      <div class="profile-info-value">
      <% if @articulos == nil %>
        <span>No se registraron productos en esta venta</span>
      <% else %>
        <div class="row-fluid">
          <div class="span12">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Cantidad</th>
                </tr>
              </thead>

              <tbody>
                
                <% @articulos.each do |articulo| %>
                  <tr>
                    <td><%= Producto.find(articulo.producto_id).nombre %></td>
                    <td><%= articulo.cantidad %></td>
                  </tr>
                <% end %>  
                
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
      </div>
    </div>

    <div class="profile-info-row">
      <div class="profile-info-name"> Total </div>

      <div class="profile-info-value">
        <span><%= @ventum.total %></span>
      </div>
    </div>
  </div>  
</div>

<div class = "form-inline pull-right">
  <%= link_to edit_ventum_path(@ventum), :class => "btn btn-info" do %>
    <i class="fa fa-edit"></i>
    Editar
  <% end %>
    
  <%= link_to venta_path, :class => "btn btn-warning" do %>
    <i class="fa fa-reply"></i>
    Volver
  <% end %>
</div>
<% end %>